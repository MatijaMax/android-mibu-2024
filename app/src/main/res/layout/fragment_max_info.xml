<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Product Name -->
        <TextView
            android:id="@+id/textViewProductNameX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name: "
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/textViewProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name: "
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/textViewProductDescriptionX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:layout_marginTop="8dp"/>
        <!-- Product Description -->
        <TextView
            android:id="@+id/textViewProductDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:layout_marginTop="8dp"/>

        <!-- Product Category -->
        <TextView
            android:id="@+id/textViewProductCategoryX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: "
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewProductCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: "
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewProductSubCategoryX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SubCategory: "
            android:layout_marginTop="8dp"/>
        <!-- Product SubCategory -->

        <TextView
            android:id="@+id/textViewProductSubCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SubCategory: "
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewProductPriceX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: "
            android:layout_marginTop="8dp"/>
        <!-- Product Price -->
        <TextView
            android:id="@+id/textViewProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: "
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewProductNewPriceX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discounted Price: "
            android:layout_marginTop="8dp"/>
        <!-- Discounted Price -->
        <TextView
            android:id="@+id/textViewProductNewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discounted Price: "
            android:layout_marginTop="8dp"/>


        <!-- Available to Buy -->
        <TextView
            android:id="@+id/textViewAvailableToBuyX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available to Buy: "
            android:layout_marginTop="8dp"/>
        <!-- Available to Buy -->
        <TextView
            android:id="@+id/textViewAvailableToBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available to Buy: "
            android:layout_marginTop="8dp"/>

        <!-- Event Types -->
        <TextView
            android:id="@+id/textViewProductEventTypesX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Types: "
            android:layout_marginTop="8dp"/>
        <!-- Event Types -->
        <TextView
            android:id="@+id/textViewProductEventTypes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Types: "
            android:layout_marginTop="8dp"/>

        <!-- Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/buttonFavourite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="⭐" />

            <Button
                android:id="@+id/buttonReserve"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reserve" />

            <Button
                android:id="@+id/buttonBuy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Buy" />
        </LinearLayout>

        <!-- Additional Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <Button
                android:id="@+id/buttonCompany"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Company" />

            <Button
                android:id="@+id/buttonChat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chat" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
