<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Owner name"
        android:id="@+id/OwnerNameEditText"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Owner surname"
        android:id="@+id/OwnerSurnameEditText"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/OwnerNameEditText"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Owner email"
        android:id="@+id/OwnerEmailEditText"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/OwnerSurnameEditText"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CompanyEmail"
        android:id="@+id/CompanyEmailEditText"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/OwnerEmailEditText"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Company name"
        android:id="@+id/CompanyNameEditText"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/CompanyEmailEditText"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by date"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:id="@+id/sortByDateButton"
        app:layout_constraintTop_toBottomOf="@id/CompanyNameEditText"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by type"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:id="@+id/sortByTypeButton"
        app:layout_constraintTop_toBottomOf="@id/sortByDateButton"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by category"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:id="@+id/sortByCategoryButton"
        app:layout_constraintTop_toBottomOf="@id/sortByTypeButton"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:id="@+id/resetButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:id="@+id/searchButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>