<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_navigation"
    app:startDestination="@+id/nav_home"
    >
    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.ma02mibu.fragments.HomeFragment"
        android:label="Products"
        tools:layout="@layout/home_fragment"
        />
    <fragment
        android:id="@+id/nav_products"
        android:name="com.example.ma02mibu.fragments.products.ProductsPageFragment"
        android:label="Products"
        tools:layout="@layout/products_page_fragment"
        app:popUpTo="@+id/nav_home"
        app:popUpToInclusive="true"
        />
    <fragment
        android:id="@+id/nav_services"
        android:name="com.example.ma02mibu.fragments.services.ServicesPageFragment"
        android:label="Services"
        tools:layout="@layout/services_page_fragment"
        app:popUpTo="@+id/nav_home"
        app:popUpToInclusive="true"
        />
    <fragment
        android:id="@+id/nav_employees"
        android:name="com.example.ma02mibu.fragments.employees.EmployeePageFragment"
        android:label="Employees"
        tools:layout="@layout/fragment_employee_page"
        />
    <fragment
        android:id="@+id/nav_employee_personal"
        android:name="com.example.ma02mibu.fragments.employees.EmployeePersonalFragment"
        android:label="Employee"
        tools:layout="@layout/fragment_employee_personal"
        />
</navigation>